@using AskMe.Models
@model LoginViewModel
@{
	ViewBag.Title = "µn¤J";
}

<div class="col-md-6">
	<div class="page-content">
		<h2>Login</h2>
		<div class="form-style form-style-3">
			<form method="post">
				@Html.AntiForgeryToken()
				<div class="form-inputs clearfix">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<p class="login-text">
						<input name="Email" type="text" value="Email" onfocus="if (this.value == 'Email') {this.value = '';}" onblur="if (this.value == '') {this.value = 'Email';}">
						<i class="icon-user"></i>
					</p>
					@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
					<p class="login-password">
						<input name="Password" type="password" value="Password" onfocus="if (this.value == 'Password') {this.value = '';}" onblur="if (this.value == '') {this.value = 'Password';}">
						<i class="icon-lock"></i>
						<a href="#">Forget</a>
					</p>
					@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
				</div>
				<p class="form-submit login-submit">
					<input type="submit" value="Log in" class="button color small login-submit submit">
				</p>
				<div class="rememberme">
					<label>@Html.CheckBoxFor(m => m.RememberMe) Remember Me</label>
				</div>
			</form>
		</div>
	</div><!-- End page-content -->
</div><!-- End col-md-6 -->
<div class="col-md-6">
	<div class="page-content">
